@model PatientModel
@{
}

div>

<br />
<h1 class="text-info">Add a Patient</h1>
<br />

<div class="container" style="padding:30px">
    <form asp-action="Add" method="post" class="main-form needs-validation">

        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" type="text" name="Name" value="" required />
        </div>
        <div class="form-group">
            <label for="CNIC">CNIC</label>
            <input class="form-control" type="number" name="CNIC" value="" required />
        </div>
        <div class="form-group">
            <label for="HospitalID">Hospital ID</label>
            <input class="form-control" type="number" name="HospitalID" value="" required />
        </div>
        <div class="form-group">
            <label for="Age">Age</label>
            <input class="form-control" type="number" name="Age" value="" required />
        </div>
        <div class="form-group">
            <label for="Gender">Gender</label>
            <input class="form-control" type="text" name="Gender" value="" required />
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input class="form-control" type="text" name="Address" value="" required />
        </div>
        <div class="form-group">
            <label for="WardName">Ward Name</label>
            <input class="form-control" type="text" name="WardName" value="" required />
        </div>


        <div>
            <button type="submit" class="btn btn-success text-white">Add</button>
            <a class="btn btn-primary text-white" asp-controller="Patient" asp-action="Index" role="button">Back</a>

        </div>
    </form>
</div>

