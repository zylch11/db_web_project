@model WardModel

<div>

    <br />
    <h1 class="text-info">Edit Ward</h1>
    <br />

    <div class="container" style="padding:30px">
        <form asp-action="EditW" method="post" class="main-form needs-validation">

            <input type="hidden" asp-for="WardId" name="WardId" value="@Model.WardId" />
            <div class="form-group">
                <label for="WardName">Ward Name</label>
                <input class="form-control" type="text" name="WardName" value="@Model.WardName" required />
            </div>
            <div class="form-group">
                <label for="WardCategory">Category</label>
                <input class="form-control" type="text" name="WardCategory" value="@Model.WardCategory" required />
            </div>
            <div class="form-group">
                <label for="WardCapacity">Capacity</label>
                <input class="form-control" type="number" name="WardCapacity" value="@Model.WardCapacity" required />
            </div>

            <div>
                <button type="submit" class="btn btn-success text-white">Add</button>
                <a class="btn btn-primary text-white" asp-controller="HospitalAndWard" asp-action="Index" role="button">Back</a>

            </div>
        </form>
    </div>

</div>

