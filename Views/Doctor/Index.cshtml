@model DoctorViewModel
@{
    ViewData["Title"] = "Manage the Doctors";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Doctors List</h2>
    </div>
    <div class="col-3">
        <a asp-action="AddDoctor" class="btn btn-info form-control text-white">Add a Doctor</a>
    </div>
 <br />

    @* Inserting the Table *@
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Qualification</th>
                <th scope="col">Age</th>
                <th scope="col">CNIC</th>
                <th scope="col">Hospital ID</th>
                <th scope="col">Role</th>
                <th scope="col">Misc.</th>
            </tr>
        </thead>


        @foreach (var d in Model.Doctors)
        {
            <tr>
                <td>@d.Name</td>
                <td>@d.Qualification</td>
                <td>@d.Age</td>
                <td>@d.CNIC</td>
                <td>@d.HospitalId</td>
                <td>@d.Role</td>
                <td>
                    <a class="btn btn-success btn-sm" asp-action="EditDoctor" asp-route-id="@d.Id">Edit</a>
                </td>
            </tr>
        }
    </table>

    
</div>